@model AmigoWalletMVCApp.Models.User

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<br />
<br />
<h2 class="text-center">Change Password</h2>
<br />
@using (Html.BeginForm("SaveNewPassword","Account"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="height:400px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBox("oldPassword", null, new { @class = "form-control", @placeholder = "Old Password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBox("newPassword", null, new { @class = "form-control", @placeholder = "New Password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-4 text-center">
                <input type="submit" value="Change Password" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}
